<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_treatment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:background="@color/backgroundAccent"
        android:src="@drawable/ic_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/backgroundAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_treatment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Ini Nama ya?"
            android:textAlignment="center"
            android:textColor="@color/textDark" />

        <TextView
            android:id="@+id/tv_treatment_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Ini deskripsi ya?"
            android:textColor="@color/textDark"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>